    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [ "WithExceptionDetails" ],
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "C:\\log.log",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}
