{
    "ConnectionStrings": {

        // Local server
        "DefaultConnection": "%DEFAULT_CONNECTION%",
        "PubScreenConnection": "%PUBSCREEEN_CONNECTION%",
        "CogbytesConnection": "%COGBYTES_CONNECTION%"


    },
    "Logging": {
        "IncludeScopes": {
            "Default": false
        },
        "Debug": {
            "LogLevel": {
                "Default": "Warning"
            }
        },
        "Console": {
            "LogLevel": {
                "Default": "Warning"
            }
        }
    },
    "ElasticSearch": {
        "uri": "https://localhost:9200",
        "defaultIndex": "pubscreen",
        "Username": "%ELASTICSEARCH_USERNAME%",
        "Password": "%ELASTICSEARCH_PASSWORD%",
        "Certificate": "%ELASTICSEARCH_CERTIFICATE%"
    },
    "MSSQL": {
        "Database": "MouseBytes"
    },

    "AllowedHosts": "*",

    "Serilog": {
        "MinimumLevel": {
            "Default": "Information",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "Enrich": [ "WithExceptionDetails" ],
        "WriteTo": [
            {
                "Name": "File",
                "Args": {
                    "path": "%LOG_PATH%",
                    "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
                    "rollingInterval": "Day"
                }
            }
        ]
    }
}
